<div class="product product__style--3">
  <div class="col-lg-3 col-md-4 col-sm-6 col-12">
    <div class="product__thumb">
     <%= link_to product_detail_path(product_id: product.id), class: "first__img" do %>
        <%= image_tag product.thumbnail %>
     <% end %>

      <%= link_to product_detail_path(product_id: product.id), class: "second__img animation1" do %>
        <%= image_tag product.thumbnail %>
      <% end %>

      <div class="hot__box">
        <span class="hot-label">BEST SALLER</span>
      </div>
    </div>
    <div class="product__content content--center">
      <h4>
        <%= link_to product.name, product_detail_path(product_id: product.id) %>
      </h4>
      <ul class="prize d-flex">
        <li>$<%= number_to_currency product.price, locale: :vi %></li>
        <li class="old_prize"> <%= number_to_currency product.old_price, locale: :vi  %></li>
      </ul>
      <div class="action">
        <div class="actions_inner">
          <ul class="add_to_links">
            <li>
              <%= link_to buy_product_now_path(product_id: product.id, count_item: 1), method: :post do %>
                <i class="fas fa-shopping-basket"></i>
              <% end %>
            </li>
            <li>
              <%= link_to add_product_to_cart_path(product_id: product.id, count_item: 1), method: :post, remote: true do %>
                <i class="fas fa-shopping-cart"></i>
              <% end %>
            </li>
            <li>
              <%= link_to quick_show_product_path(product_id: product.id), remote: true do %>
                <i class="fas fa-search"></i>
              <% end %>
            </li>
            <li><%= link_to product_detail_path(product_id: product.id) do %>
                <i class="fas fa-file-alt"></i>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
      <div class="product__hover--content">
        <ul class="rating d-flex">
          <li class="on"><i class="fa fa-star-o"></i></li>
          <li class="on"><i class="fa fa-star-o"></i></li>
          <li class="on"><i class="fa fa-star-o"></i></li>
          <li><i class="fa fa-star-o"></i></li>
          <li><i class="fa fa-star-o"></i></li>
        </ul>
      </div>
    </div>
  </div>

</div>

