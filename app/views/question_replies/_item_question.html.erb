<div class="product-qa-<%= question.id %>">
  <div class="name-content">
    <span class="name-user"><%= question.user.name %></span> &emsp; <span class="content-question"><%= question.content %>
    <span class="no-like-question text-center">
      <% if question.num_like > 0 %>
       <%= question.num_like %><i class="fas fa-thumbs-up"></i>
    <% end %>
    </span>
  </span>

  </div>
  <div class="like-reply">
    <%= link_to "Thích", like_question_product_path(question_id: question.id), method: :post, remote: true, class: "text-like-reply" %>&emsp;
    <%= link_to "Trả lời", open_form_replies_path(question_id: question.id), remote: true, class: "text-like-reply" %>
  </div>
</div>