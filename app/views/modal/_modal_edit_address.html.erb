<div class="modal fade" id="form-edit-user" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <h5 class="modal-title" id="exampleModalLabel"><%= t("modal.modal_edit_user.title") %>></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= form_for(resource, as: resource_name, url: user_registration_path(resource_name), html: {method: :put}) do |f| %>

          <div class="form-group">
            <div class="field">
              <%= f.label :email %><br/>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: t("gem_devise.email") %>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :name %><br/>
              <%= f.text_field :name, autofocus: true, autocomplete: "on", class: "form-control", placeholder: t('gem_devise.name') %>
            </div>
          </div>
          <div class="form-group">
            <div class="field">
              <%= f.label :username %><br/>
              <%= f.text_field :username, autofocus: true, autocomplete: "on", class: "form-control", placeholder: t("gem_devise.username") %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :gender %><br/>
            <%= f.select :gender, options_for_select([["Male", 1], ["Female", 2]]), class: "form-control" %>

          </div>
          <div class="form-group">
            <%= f.label :birthday %><br/>
            <%= f.date_select(:birthday, {
                :order => [:day, :month, :year],
                :start_year => 1920,
                :end_year => 2013
            }, {:class => "input-mini"}) %>
          </div>

          <div class="form-group">
            <%= f.label :password %> <i><%= t("gem_devise.leave_not_change_pass") %></i><br/>
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: t("gem_devise.password")%>
          </div>
          <div class="form-group">
            <%= f.label :password_confirmation %><br/>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: t("gem_devise.pass_cf") %>
          </div>
          <div class="form-group">
            <%= f.label :current_password %> <i><%= t("gem_devise.cf_current_pass") %></i><br/>
            <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", placeholder: t("gem_devise.cf_current_pass") %>
          </div>
          </div>
          <div class="modal-footer border-top-0 d-flex justify-content-center">
            <%= f.submit t("gem_devise.update"), class: "btn btn-success" %>
          </div>
        <% end %>
        </div>
  </div>
</div>
