<div class="item01 d-flex item--cart" id="cart--item--<%=item.product.id%>">
  <div class="thumb">
    <%= image_tag item.product.thumbnail, class: "image--cart" %>
  </div>
  <div class="content">
    <h6><a href="product-details.html"><%= item.product.name %></a></h6>
    <span class="prize"><%= number_to_currency item.price_per_item, locale: :vi %></span>
    <div class="product_prize d-flex justify-content-between">
      <span class="qun"><%= t "product.quantity" %>: <%= item.count %></span>
      <ul class="d-flex justify-content-end">
        <li>
          <%= link_to remove_item_cart_path(product_id: item.product.id), method: :delete, remote: true do %>
            <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>