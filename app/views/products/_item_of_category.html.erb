<div class="product product__style--3 col-lg-4 col-md-4 col-sm-6 col-12">
  <div class="product__thumb">
    <a class="first__img" href="single-product.html"><%= image_tag product.thumbnail %></a>
    <a class="second__img animation1" href="single-product.html"><%= image_tag product.thumbnail %></a>
    <div class="hot__box color--2">
      <span class="hot-label">HOT</span>
    </div>
  </div>
  <div class="product__content content--center">
    <h4><a href="single-product.html"><%= product.name %></a></h4>
    <ul class="prize d-flex">
      <li><%= product.price %></li>
      <li class="old_prize"><%= product.old_price %></li>
    </ul>
    <div class="action">
      <div class="actions_inner">
        <ul class="add_to_links">
          <li><a class="cart" href="#"><i class="fas fa-shopping-basket"></i></a></li>
          <li>
            <%= link_to add_product_to_cart_path(product_id: product.id, count_item: 1), method: :post, remote: true do %>
              <i class="fas fa-shopping-cart"></i>
            <% end %>
          </li>
          <li>
            <%= link_to quick_show_product_path(product_id: product.id), remote: true do %>
              <i class="fas fa-search"></i>
            <% end %>
          </li>
          <li><%= link_to product_detail_path(product_id: product.id) do %>
              <i class="fas fa-file-alt"></i>
            <% end %>
          </li>
        </ul>
      </div>
    </div>
    <div class="product__hover--content">
      <ul class="rating d-flex">
        <li class="on"><i class="fa fa-star-o"></i></li>
        <li class="on"><i class="fa fa-star-o"></i></li>
        <li class="on"><i class="fa fa-star-o"></i></li>
        <li><i class="fa fa-star-o"></i></li>
        <li><i class="fa fa-star-o"></i></li>
      </ul>
    </div>
  </div>
</div>