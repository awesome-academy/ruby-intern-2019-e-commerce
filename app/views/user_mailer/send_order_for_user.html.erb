<%= t "orders.hi" %> <h1><%= @user.name %></h1>
<p><%= t "orders.you_have_a_new_order" %></p>
<hr>
<h3><b><%= t "orders.info" %></b></h3>
<div class="form-group">
  <p><b><%= t "user.name" %>: </b><%= @user.name %></p>
  <p><b><%= t "user.email" %>: </b><%= @user.email %></p>
  <p><b><%= t "user.phone" %>: </b><%= @user.phone %></p>
  <p><b><%= t "user.address" %>: </b><%= @address_detail %></p>
</div>
<div class="container box-signup">
  <% @order.cart.line_items.each do |item| %>
    <div class="row well">
      <div class="col-sm-7">
        <h3><%= item.product.name %></h3>
      </div>
      <div class="col-sm-5">
        <div class="pull-right">
          <%= hidden_field :product_id, value: item.product.id %>
          <h5><%= number_to_currency item.price_per_item, locale: :vi %></h5>
          <div class="form-group">
            <span><%= t "orders.quantity" %> <%= item.count %></span>
          </div>
          <span><%= t "orders.price" %>: <%= number_to_currency item.total_price, locale: :vi %></span>
        </div>
      </div>
    </div>
  <% end %>
  <div class="row pull-right">
    <h3><b><%= t "orders.total_price" %>: <%= number_to_currency @order.cart.total_price, locale: :vi %></b></h3>
  </div>
  <br><br>
  <hr>
</div>
